    <td>
      <%= a_bet.date %>
    </td>

    <td>
      <%= a_bet.books1 %>
    </td>

    <td>
      <%= a_bet.odds1 %>
    </td>

    <td>
      <%= a_bet.books2 %>
    </td>

    <td>
